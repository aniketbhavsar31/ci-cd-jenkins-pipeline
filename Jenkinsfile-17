    agent any
    options {
        timeout(time: 10, unit: 'SECONDS')
    }
    stages {
        stage('Build') {
  options {
        timeout(time: 6, unit: 'SECONDS')
    }
        steps {
                echo "Hello there!"
                sleep 5
                echo "Oops! I fell asleep for a couple seconds!"
            }
        }

        stage('Test') {

options {
        timeout(time: 6, unit: 'SECONDS')
    }
            steps {
                echo "Hello there!"
                sleep 5
                echo "Oops! I fell asleep for a couple seconds!"
            }
        }

    }
}
